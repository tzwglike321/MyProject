package fjnu;

import java.io.*;
import java.util.*;

public class FileInformation {
	public static void main(String []args){
		System.out.println("Enter the solute:");
		Scanner scan = new Scanner(System.in);
		String str = scan.nextLine();
		//File file1 = new File("I:");
		File file1 = new File(str);
		String []list;
		list = file1.list();
		java.text.SimpleDateFormat df = new java.text.SimpleDateFormat("yyyy-MM-dd HH:mm:ss.SSS");
		for(int i = 0;i < list.length;i++){
			//System.out.println(list[i]);
			File file2 = new File(str+"\\"+list[i]);
			if(file2.exists()){
				String dateTime=df.format(new Date(file2.lastModified()));
				if(file2.isFile()){
					System.out.println(list[i] + "	修改日期：" + dateTime + "	文件大小：" + file2.length() +"字节");
				}
				else{
					System.out.println(list[i] + "	修改日期：" + dateTime);
				}
			}
			else{
				System.out.println("文件或文件夹不存在！");
			}
			
		}
		
	}
}
